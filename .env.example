# Telegram API credentials
# Получить на https://my.telegram.org/apps
TG_API_ID=12345678
TG_API_HASH=your_api_hash_here

# Твой Telegram User ID
# Узнать можно через @userinfobot
TG_USER_ID=123456789

# Anthropic API Key (опционально при OAuth)
# Если не указан, будет использоваться OAuth через браузер
# ANTHROPIC_API_KEY=sk-ant-...

# Модель Claude (по умолчанию Opus 4.5)
# CLAUDE_MODEL=claude-opus-4-5-20251101

# Прокси для Claude API (опционально)
# HTTP_PROXY=http://user:pass@host:port

# OpenAI API Key (для транскрипции голосовых через Whisper)
# https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-...

# Heartbeat — проактивные проверки (минуты, 0 = отключён)
HEARTBEAT_INTERVAL_MINUTES=30

# Timezone (для scheduler и отображения времени)
TZ=Europe/Moscow
